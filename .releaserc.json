{
    "branches": ["main", "mnordby/test"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "RemoveJsons": "rm package.json package-lock.json .releaserc.json",
                "generateNotesCmd": "python update_version.py ${nextRelease.version}"
            }
        ],
        "@semantic-release/changelog",
        [
            "@semantic-release/git",
            {
                "assets": ["README.md", "*.json"],
                "message": "chore(release): update version to ${nextRelease.version} [skip ci]"
            }
        ],
        "@semantic-release/github"
    ]
}
