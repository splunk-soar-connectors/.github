{
    "branches": ["main", "mnordby/test"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "echo ${nextRelease.notes} && rm -f package.json package-lock.json .releaserc.json && python update_version.py ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["README.md", "*.json", "CHANGELOG.md"],
                "message": "chore(release): update version to ${nextRelease.version} [skip ci]"
            }
        ],
        "@semantic-release/github"
    ]
}
